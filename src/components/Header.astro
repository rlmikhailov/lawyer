<style>
  /* Header base styles unchanged */
  .header {
    position: fixed;
    top: 0; left: 0; right: 0;
    height: 60px;
    background: #fff;
    border-bottom: 1px solid #ccc;
    z-index: 1000;
    display: flex;
    align-items: center;
    padding: 0 1rem;
    box-sizing: border-box;
    width: 100%;
  }
  .container {
    width: 100%;
    max-width: 1024px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo img {
    height: 40px;
    width: auto;
  }
  .header-right {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
  }
  .header-right button {
    border: none;
    border-radius: 12px;
    padding: 10px 18px;
    margin: 0 8px 0 0;
    font-size: 16px;
    font-weight: 600;
    color: #222;
    background: rgba(255 255 255 / 0.3);
    backdrop-filter: blur(12px);
    cursor: pointer;
    box-shadow: 0 4px 12px rgb(0 0 0 / 0.1);
    transition: background-color 0.3s ease, box-shadow 0.3s ease, color 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  .header-right button:hover {
    background: rgba(255 255 255 / 0.5);
    box-shadow: 0 6px 20px rgb(0 0 0 / 0.15);
    color: #000;
  }
  .header-right .apply-btn {
    background-color: #25D366;
    color: #fff;
    font-weight: 700;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }
  .header-right .apply-btn:hover {
    background-color: #1ebe57;
    box-shadow: 0 6px 16px rgb(37 211 102 / 0.7);
    color: #fff;
  }
  .header-right button a {
    color: inherit;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    height: 100%;
  }
  .menu-toggle {
    font-size: 1.8rem;
    background: none;
    border: none;
    cursor: pointer;
    margin-left: 0.5rem;
  }

  /* Slide menu styles */
  .nav-menu {
    position: fixed;
    top: 60px;
    right: 0;
    height: calc(100vh - 60px);
    width: 250px;
    background: #fff;
    border-left: 1px solid #ccc;
    box-shadow: -4px 0 12px rgba(0,0,0,0.1);
    border-radius: 0 0 0 8px;
    padding: 1rem 1.5rem;
    box-sizing: border-box;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    z-index: 999;
    overflow-y: auto;
  }

  .nav-menu.open {
    transform: translateX(0);
  }

  .nav-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  body {
    padding-top: 60px;
    margin: 0;
  }

  /* MOBILE STYLES */
  @media (max-width: 700px) {
    .header {
      height: auto;
      padding: 0 0.5rem;
      flex-direction: column;
      align-items: flex-start;
    }
    .container {
      flex-direction: column;
      align-items: flex-start;
      width: 100%;
      max-width: 100%;
      padding: 0;
    }
    .logo {
      margin: 0.5rem 0 0.25rem 0;
    }
    .header-right {
      width: 100%;
      justify-content: space-between;
      gap: 0.3rem;
      margin: 0.25rem 0 0.5rem 0;
    }
    .call-btn, .apply-btn {
      font-size: 1em;
      padding: 7px 12px;
    }
    .menu-toggle {
      display: inline-block;
    }
    .nav-menu {
      min-width: 200px;
    }
  }
  .mobile-text {
    display: none;
  }
  @media (max-width: 700px) {
    .desktop-text {
      display: none;
    }
    .mobile-text {
      display: inline;
    }
  }
</style>

<script client:load>
  const toggleBtn = document.getElementById('menu-toggle');
  const navMenu = document.getElementById('nav-menu');

  toggleBtn.addEventListener('click', () => {
    navMenu.classList.toggle('open');
    navMenu.setAttribute('aria-hidden', navMenu.classList.contains('open') ? 'false' : 'true');
  });

  window.closeMenu = function() {
    navMenu.classList.remove('open');
    navMenu.setAttribute('aria-hidden', 'true');
  };

  document.addEventListener('click', (e) => {
    if (!navMenu.contains(e.target) && !toggleBtn.contains(e.target)) {
      window.closeMenu();
    }
  });
</script>
