<style>
  /* Shared glass styles for both sidebar and mobile bar */
  .glass {
    background: rgba(255, 255, 255, 0.14);
    border: 1.7px solid rgba(255,255,255,0.48);
    box-shadow: 0 8px 32px rgba(31,38,135,0.18), 
                inset 0 4px 20px rgba(255,255,255,0.26);
    backdrop-filter: blur(16px) saturate(200%);
    border-radius: 1.6rem;
    position: relative;
    transition: background 0.25s;
    overflow: visible;
  }
  .glass::after {
    content: '';
    position: absolute;
    border-radius: 1.6rem;
    top: 0; left: 0; width: 100%; height: 100%;
    opacity: 0.3;
    pointer-events: none;
    background: linear-gradient(135deg, rgba(220,255,255,0.18) 0%, rgba(255,255,255,0.1) 100%);
    box-shadow: 0 1px 4px 0 rgba(255,255,255,0.24) inset, 
                0 0px 8px 0 rgba(255,255,255,0.12) inset;
    filter: blur(2px) drop-shadow(0 2px 12px rgba(255,255,255,0.18)) brightness(120%);
    z-index: -1;
  }

  .sidebar {
    position: fixed;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 14px;
    padding: 14px;
    z-index: 1000;
    width: 54px;
    min-height: 196px;
  }

  .sidebar a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    text-decoration: none;
    color: #222;
    font-size: 22px;
    font-weight: 600;
    background: rgba(255,255,255,0.20);
    box-shadow: 0 0 16px rgba(110,126,168,0.10);
    border: 1px solid rgba(255,255,255,0.28);
    margin: 0 auto;
    transition: background 0.2s, box-shadow 0.2s;
    opacity: 0.93;
    backdrop-filter: blur(1.5px);
  }
  .sidebar a:hover {
    background: rgba(190, 245, 245, 0.40);
    box-shadow: 0 0 20px rgba(70,148,170,0.16);
    opacity: 1;
  }
  .sidebar a.phone { color: #41d37a; }
  .sidebar a.email { color: #19c7e7; }
  .sidebar a.whatsapp { color: #25d366; }

  /* Mobile styles */
  @media (max-width: 700px) {
    .sidebar {
      display: none;
    }
    .mobile-contact-bar {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 14px;
      position: fixed;
      bottom: 18px;
      left: 50%;
      transform: translateX(-50%);
      padding: 10px 18px;
      z-index: 1000;
      width: auto;
      max-width: 100vw;
      min-width: 180px;
      border-radius: 2rem;
      box-sizing: border-box;
    }
    .mobile-contact-bar a {
      width: 44px;
      height: 44px;
      font-size: 24px;
      border-radius: 50%;
      text-align: center;
      align-items: center;
      display: flex;
      justify-content: center;
      margin: 0;
      opacity: 0.92;
      background: rgba(255,255,255,0.22);
      border: 1px solid rgba(255,255,255,0.15);
      box-shadow: 0 0 10px rgba(31,38,135,0.10);
      transition: background 0.17s, box-shadow 0.2s;
    }
    .mobile-contact-bar a:hover {
      background: rgba(220,235,255,0.35);
      box-shadow: 0 0 18px rgba(31,38,135,0.14);
      opacity: 1;
    }
    .mobile-contact-bar a.phone { color: #41d37a; }
    .mobile-contact-bar a.email { color: #19c7e7; }
    .mobile-contact-bar a.whatsapp { color: #25d366; }
  }

  /* Hide mobile bar on desktop */
  @media (min-width: 701px) {
    .mobile-contact-bar { display: none; }
  }
</style>

