---
// Modal.astro
const { id, open } = Astro.props;
---
<button onclick={`window.${id}.showModal()`}>{open}</button>
<dialog id={id}>
  <slot name="main" />
  <form method="dialog">
    <slot name="close" />
  </form>
</dialog>
<style>
  dialog {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    padding: 2rem;
    background: white;
    border-radius: 0.75rem;
    box-shadow: 0 2px 10px rgba(0,0,0,.2);
  }
  dialog::backdrop {
    background: rgba(0,0,0,0.35);
  }
</style>
