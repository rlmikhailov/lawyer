---
// Modal.astro
const { id, open } = Astro.props;
---
<button class="liquid-btn" onclick={`window.${id}.showModal()`}>{open}</button>
<dialog id={id}>
  <slot name="main" />
  <form method="dialog">
    <slot name="close" />
  </form>
</dialog>

<style>
  dialog {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    padding: 2rem;
    background: rgba(255 255 255 / 0.85);
    border-radius: 0.75rem;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    max-width: 90vw;
    width: 400px;
    box-sizing: border-box;
  }
  dialog::backdrop {
    background: rgba(0, 0, 0, 0.35);
  }

  @media (max-width: 480px) {
    dialog {
      width: 95vw;
      padding: 1.5rem;
      max-height: 90vh;
      overflow-y: auto;
      border-radius: 1rem;
    }
  }

  .liquid-btn {
    border: none;
    border-radius: 12px;
    padding: 12px 22px;
    font-size: 16px;
    font-weight: 600;
    color: #222;
    background: rgba(255 255 255 / 0.3);
    backdrop-filter: blur(12px);
    cursor: pointer;
    box-shadow: 0 4px 12px rgb(0 0 0 / 0.1);
    transition: background-color 0.3s ease, box-shadow 0.3s ease, color 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .liquid-btn:hover {
    background: rgba(255 255 255 / 0.5);
    box-shadow: 0 6px 20px rgb(0 0 0 / 0.15);
    color: #000;
  }
</style>
